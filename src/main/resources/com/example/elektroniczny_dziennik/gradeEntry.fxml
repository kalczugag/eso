<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@styles/app-styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.elektroniczny_dziennik.GradeEntryController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-width: 0 0 1 0; -fx-padding: 15 30;">
            <children>
                <VBox>
                    <children>
                        <Label text="Dziennik Elektroniczny" textFill="#6b7280">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label text="Wprowadzanie i Edycja Ocen" textFill="#1f2937">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <Region HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <JFXComboBox fx:id="subjectComboBox" promptText="1. Wybierz Przedmiot" />
                    <JFXComboBox fx:id="studentSearchField" editable="true" prefWidth="200.0" promptText="2. Szukaj studenta..." />
                </HBox>
            </children>
        </HBox>
    </top>

    <center>
        <VBox>
            <padding>
                <Insets bottom="20.0" left="30.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <TableView fx:id="gradesTable" editable="true" stylesheets="@styles/app-styles.css" VBox.vgrow="ALWAYS" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 1);">
                    <columns>
                        <TableColumn fx:id="studentNameCol" prefWidth="150.0" text="Student" />
                        <TableColumn fx:id="gradeCol" prefWidth="80.0" text="Ocena" />
                        <TableColumn fx:id="descriptionCol" prefWidth="300.0" text="Opis" />
                        <TableColumn fx:id="dateCol" prefWidth="120.0" text="Data" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </center>

    <right>
        <VBox spacing="20" style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-width: 0 0 0 1; -fx-padding: 20;">
            <Label text="Nowa Ocena" textFill="#6b7280">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Label>

            <VBox spacing="10.0">
                <TextField fx:id="newGradeInput" promptText="Ocena (np. 4.5)" style="-fx-padding: 10; -fx-background-radius: 4;" />
                <TextField fx:id="descriptionInput" promptText="Opis (np. Kolokwium)" style="-fx-padding: 10; -fx-background-radius: 4;" />
            </VBox>

            <Button onAction="#saveGrade" maxWidth="1.7976931348623157E308" prefHeight="40.0" style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 6;" text="Zapisz OcenÄ™" />
        </VBox>
    </right>
</BorderPane>