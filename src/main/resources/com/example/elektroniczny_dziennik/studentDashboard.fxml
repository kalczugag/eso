<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="850.0" style="-fx-background-color: #f9fafb;" stylesheets="@styles/app-styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.elektroniczny_dziennik.StudentDashboardController">
    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Witaj ponownie!" textFill="#6b7280">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label fx:id="welcomeLabel" text="Twoje Centrum Nauki" textFill="#1f2937">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Separator prefWidth="200.0" />
            </children>
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="30.0" />
            </padding>
        </VBox>
    </top>

    <center>
        <VBox spacing="25.0">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" />
            </padding>
            <children>
                <HBox spacing="20.0">
                    <children>
                        <VBox prefHeight="120.0" prefWidth="250.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 1); -fx-padding: 20;">
                            <children>
                                <Label text="TWOJA ŚREDNIA" textFill="#6b7280">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <Label fx:id="avgLabel" text="4.65" textFill="#3b82f6">
                                    <font>
                                        <Font name="System Bold" size="36.0" />
                                    </font>
                                </Label>
                                <Label text="↑ 0.15 od zeszłego tygodnia" textFill="#10b981">
                                    <font>
                                        <Font size="11.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <HBox spacing="20.0">
                    <children>
                        <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 1);">
                            <children>
                                <Label text="Ostatnie Oceny" textFill="#1f2937">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <Separator />
                                <ListView fx:id="recentGradesList" style="-fx-background-color: transparent; -fx-border-color: transparent;" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
