<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane fx:id="anchorPane" prefHeight="584.0" prefWidth="1000.0" stylesheets="@styles/userManagement.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.elektroniczny_dziennik.UserManagementController">
   <children>
      <TextField fx:id="searchField" layoutX="14.0" layoutY="14.0" prefHeight="35.0" prefWidth="225.0" promptText="Wyszukaj po imieniu" styleClass="searchField" />
      <Button fx:id="searchBtn" layoutX="255.0" layoutY="17.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#searchUser" text="Szukaj" />
      <TableView fx:id="userTable" layoutX="14.0" layoutY="87.0" prefHeight="450.0" prefWidth="629.0">
        <columns>
          <TableColumn fx:id="idColumn" prefWidth="75.0" />
          <TableColumn fx:id="firstNameColumn" prefWidth="75.0" />
            <TableColumn fx:id="lastNameColumn" prefWidth="75.0" />
            <TableColumn fx:id="loginColumn" prefWidth="75.0" />
            <TableColumn fx:id="roleColumn" prefWidth="75.0" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <VBox layoutX="654.0" layoutY="87.0" maxWidth="1.7976931348623157E308" spacing="15.0">
         <children>
            <Button fx:id="addNewStudent" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#addStudent" styleClass="addBtn" text="Dodaj studenta" />
            <Button fx:id="addNewTeacher" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#addTeacher" styleClass="addBtn" text="Dodaj nauczyciela" />
            <Button fx:id="deleteBtn" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#deleteUser" styleClass="deleteBtn" text="Usuń użytkownika" />
         </children>
      </VBox>
   </children>
</AnchorPane>
