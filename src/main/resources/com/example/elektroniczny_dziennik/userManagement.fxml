<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainPane" prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: #f9fafb;" stylesheets="@styles/app-styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.elektroniczny_dziennik.UserManagementController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-width: 0 0 1 0; -fx-padding: 15 30;">
            <children>
                <VBox>
                    <children>
                        <Label text="Użytkownicy" textFill="#6b7280">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label text="Zarządzaj dostępem i rolami" textFill="#1f2937">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
                <Region HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #f3f4f6; -fx-background-radius: 8; -fx-padding: 5;">
                    <children>
                        <TextField fx:id="searchField" promptText="Szukaj po nazwisku..." style="-fx-background-color: transparent; -fx-prompt-text-fill: #9ca3af;" HBox.hgrow="ALWAYS" />
                        <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#searchUser" style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-background-radius: 6; -fx-cursor: hand;" text="Szukaj" />
                    </children>
                    <padding>
                        <Insets left="10.0" right="5.0" />
                    </padding>
                </HBox>
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="20.0" left="30.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <TableView fx:id="userTable" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 1);" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="firstNameColumn" prefWidth="150.0" text="Imię" />
                        <TableColumn fx:id="lastNameColumn" prefWidth="150.0" text="Nazwisko" />
                        <TableColumn fx:id="loginColumn" prefWidth="120.0" text="Login" />
                        <TableColumn fx:id="roleColumn" prefWidth="100.0" text="Rola" />
                        <TableColumn fx:id="actionsColumn" prefWidth="180.0" text="Akcje" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </center>

    <right>
        <VBox prefWidth="250.0" spacing="20.0" style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-width: 0 0 0 1;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label text="Akcje" textFill="#6b7280">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <Button fx:id="addUserBtn" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#addUser" prefHeight="40.0" style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold; -fx-cursor: hand;" text="+ Dodaj Użytkownika" />
            </children>
        </VBox>
    </right>
</BorderPane>