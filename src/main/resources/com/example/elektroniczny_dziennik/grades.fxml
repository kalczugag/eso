<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #f9fafb;" stylesheets="@styles/app-styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.elektroniczny_dziennik.gradesController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-width: 0 0 1 0; -fx-padding: 15 30;">
            <children>
                <VBox>
                    <children>
                        <Label text="Dziennik Elektroniczny" textFill="#6b7280">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label text="Moje Oceny" textFill="#1f2937">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <Region HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <Label fx:id="averageLabel" text="Åšrednia: 0.00" textFill="#3b82f6">
                        <font>
                            <Font name="System Bold" size="18.0" />
                        </font>
                    </Label>
                    <Button fx:id="aiButton" onAction="#generateReport" style="-fx-background-color: #8b5cf6; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 3, 0, 0, 1);" text="Generuj Raport" />
                </HBox>
            </children>
        </HBox>
    </top>

    <center>
        <VBox>
            <padding>
                <Insets bottom="20.0" left="30.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <TableView fx:id="gradesTable" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 1);" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="subjectCol" prefWidth="200.0" text="Przedmiot" />
                        <TableColumn fx:id="gradeCol" prefWidth="100.0" text="Ocena" />
                        <TableColumn fx:id="descCol" prefWidth="300.0" text="Opis" />
                        <TableColumn fx:id="dateCol" prefWidth="150.0" text="Data" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </center>
</BorderPane>