<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane cacheShape="false" prefHeight="600.0" prefWidth="400.0" styleClass="bg-pane" stylesheets="@styles/auth.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.elektroniczny_dziennik.LoginController">
   <children>
      <VBox alignment="CENTER" prefHeight="600.0" prefWidth="400.0" spacing="70.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label alignment="CENTER" prefHeight="16.0" prefWidth="143.0" text="Zaloguj się">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Label>
            <VBox prefHeight="119.0" prefWidth="340.0" spacing="10.0">
               <children>
                  <VBox prefHeight="50.0" prefWidth="400.0" spacing="2.0">
                     <children>
                        <Label text="Login" />
                        <TextField fx:id="loginInput" prefWidth="372.0" styleClass="login-text-field" />
                     </children>
                  </VBox>
                  <VBox prefHeight="50.0" prefWidth="400.0" spacing="2.0">
                     <children>
                        <Label text="Hasło" />
                        <PasswordField fx:id="passwordInput" styleClass="login-text-field" />
                     </children>
                  </VBox>
                  <Label fx:id="errorLabel" alignment="CENTER" lineSpacing="1.0" maxWidth="1.7976931348623157E308" textAlignment="CENTER" textFill="RED">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox fx:id="buttonsContainer" alignment="TOP_CENTER" prefHeight="100.0" prefWidth="100.0" spacing="25.0">
               <children>
                  <Button fx:id="loginButton" maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#login" styleClass="login-button" text="Zaloguj się" VBox.vgrow="ALWAYS" />
                  <Button fx:id="registerButton" maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#register" styleClass="login-button" text="Zarejestruj się" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets left="30.0" right="30.0" />
   </padding>
</AnchorPane>
