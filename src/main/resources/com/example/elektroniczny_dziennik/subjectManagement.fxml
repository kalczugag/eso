<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #f9fafb;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.elektroniczny_dziennik.SubjectManagementController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-width: 0 0 1 0; -fx-padding: 15 30;">
            <children>
                <VBox>
                    <children>
                        <Label text="Administracja" textFill="#6b7280">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label text="Przedmioty i Kadra" textFill="#1f2937">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="20.0" left="30.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label text="Lista Przedmiotów" textFill="#1f2937">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <TableView fx:id="subjectsTable" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 1);" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="nameColumn" prefWidth="250.0" text="Nazwa Przedmiotu" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <Button mnemonicParsing="false" onAction="#deleteSubject" style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-cursor: hand;" text="Usuń zaznaczony przedmiot" />
            </children>
        </VBox>
    </center>

    <right>
        <VBox prefWidth="350.0" spacing="20.0" style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-width: 0 0 0 1;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>

                <Label text="Nowy Przedmiot" textFill="#1f2937">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <TextField fx:id="newSubjectName" promptText="Np. Matematyka" style="-fx-background-radius: 4; -fx-padding: 8;" />
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#addSubject" style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="+ Utwórz" />

                <Separator prefWidth="200.0" />

                <Label text="Przypisz Nauczycieli" textFill="#1f2937">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <Label text="Edytujesz przedmiot:" textFill="#6b7280" />
                <Label fx:id="selectedSubjectLabel" text="(Wybierz z listy obok)" textFill="#3b82f6">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>

                <VBox fx:id="teachersContainer" spacing="5.0">
                    <children>
                        <Label text="Wybierz kadrę:" textFill="#6b7280" />
                    </children>
                </VBox>

                <Button fx:id="saveTeachersBtn" disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#saveTeachersAssignment" style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Zapisz przydział" />

                <Label fx:id="infoLabel" wrapText="true" />
            </children>
        </VBox>
    </right>
</BorderPane>