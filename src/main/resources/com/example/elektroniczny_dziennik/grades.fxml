<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="800.0" stylesheets="@styles/app-styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.elektroniczny_dziennik.gradesController">
    <top>
        <VBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <Label text="Moje Oceny">
                            <font>
                                <Font size="34.0" />
                            </font>
                        </Label>
                        <Button fx:id="aiButton" onAction="#generateReport" style="-fx-background-color: #673AB7; -fx-text-fill: white;" text="Generuj Raport i Zapisz">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="kolory na razie losowe" />
                    </children>
                </HBox>
                <Label fx:id="averageLabel" text="Åšrednia ocen: 0.00" textFill="#2196f3">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <TableView fx:id="gradesTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="subjectCol" prefWidth="200.0" text="Przedmiot" />
                <TableColumn fx:id="gradeCol" prefWidth="100.0" text="Ocena" />
                <TableColumn fx:id="descCol" prefWidth="300.0" text="Opis" />
                <TableColumn fx:id="dateCol" prefWidth="150.0" text="Data" />
            </columns>
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" />
