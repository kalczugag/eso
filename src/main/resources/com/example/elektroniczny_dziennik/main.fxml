<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="650.0" prefWidth="1200.0" stylesheets="@styles/app-styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.elektroniczny_dziennik.MainController">
   <left>
      <VBox id="sidebarContainer" fx:id="sidebarContainer" fillWidth="false" prefHeight="440.0" prefWidth="192.0" spacing="20.0" styleClass="sidebar-pane" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <opaqueInsets>
            <Insets top="10.0" />
         </opaqueInsets>
      </VBox>
   </left>
   <center>
      <Pane id="mainContainer" fx:id="mainContainer" prefHeight="584.0" prefWidth="1008.0" styleClass="content-pane" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <HBox id="headerPane" fx:id="header" alignment="CENTER_RIGHT" prefHeight="66.0" prefWidth="600.0" spacing="15.0" styleClass="header-pane" BorderPane.alignment="CENTER">
         <children>
            <Label id="loggedLabel" fx:id="loggedLabel" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" prefHeight="17.0" styleClass="header-label" text="Zalogowano jako: " />
            <Button fx:id="logoutBtn" mnemonicParsing="false" onAction="#logout" text="Wyloguj" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>
